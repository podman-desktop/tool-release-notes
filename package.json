{
  "name": "tool-release-notes",
  "version": "1.0.0",
  "description": "Release notes generator for Podman Desktop repository",
  "license": "apache-2.0",
  "scripts": {
    "generate": "tsx ./release-notes/generate-release-notes.ts",
    "test": "vitest --run --passWithNoTests",
    "test:coverage": "pnpm run test --coverage",
    "typecheck": "tsc --noEmit -p tsconfig.json",
    "format:check": "biome format --check && prettier --cache --check \"release-notes/**/*.ts\"",
    "format:clean": "rimraf node_modules/.cache/prettier",
    "format:fix": "biome format --write && prettier --cache --write \"release-notes/**/*.ts\"",
    "lint:clean": "rimraf .eslintcache",
    "lint:fix": "node --max-old-space-size=8192 node_modules/eslint/bin/eslint.js --cache . --cache-strategy content --fix",
    "lint:check": "node --max-old-space-size=8192 node_modules/eslint/bin/eslint.js --cache . --cache-strategy content",
    "prepare": "husky"
  },
  "packageManager": "pnpm@10.7.0",
  "dependencies": {
    "@eslint/compat": "^1.3.1",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.31.0",
    "@octokit/openapi-types": "^25.1.0",
    "@octokit/rest": "^22.0.0",
    "@typescript-eslint/parser": "^8.37.0",
    "@vitest/eslint-plugin": "^1.3.4",
    "biome": "^0.3.3",
    "eslint": "^9.31.0",
    "eslint-plugin-etc": "^2.0.3",
    "eslint-plugin-file-progress": "^3.0.2",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-no-null": "^1.0.2",
    "eslint-plugin-redundant-undefined": "^1.0.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-sonarjs": "^3.0.4",
    "eslint-plugin-unicorn": "^59.0.1",
    "globals": "^16.3.0",
    "mustache": "^4.2.0",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "tsx": "^4.20.3",
    "typescript-eslint": "^8.37.0",
    "vitest": "^3.2.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@vitest/coverage-v8": "3.2.4",
    "eslint-import-resolver-node": "^0.3.9",
    "eslint-import-resolver-typescript": "^4.4.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2"
  },
  "lint-staged": {
    "*.{js,ts,tsx,svelte}": [
      "node --max-old-space-size=8192 node_modules/eslint/bin/eslint.js --cache --fix",
      "biome format --write"
    ],
    "*.md": "prettier --cache --write",
    "*.{css,json}": "biome format --write"
  }
}
