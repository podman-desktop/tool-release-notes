{
  "compilerOptions": {
    "module": "NodeNext",
    "target": "esnext",
    "sourceMap": false,
    "moduleResolution": "node16",
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "strict": true,
    "isolatedModules": true,
    "exactOptionalPropertyTypes": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "types": ["node"],
    "baseUrl": ".",
  },
  "include": [
    "release-notes/*.ts",
    "types/*.d.ts",
  ]
}
